<?xml version="1.0" encoding="utf-8"?>

<param>
        <!-- Plant type -->
        <Plant value='Maize' /> <!-- #Maize / Arabido / Millet / Barley / -->
        
        <!-- Image path and properties -->
        <path value='Maize1.xml' />
        <im_scale value="1.0" /> <!-- #image scale (micron per pixel) -->
        
        <!-- Maturity level
        0: No apoplastic barriers
        1: Endodermal Casparian strip (radial walls)
        2: Endodermal suberization except at passage cells
        3: Endodermis full suberization
        4: Endodermis full suberization and exodermal Casparian strip (radial walls) -->
        <Barrierrange> <!-- All the listed barrier types will be simulated and reported in separate files "***b1", "***b2", "***b3",... -->
            <Barriers value="1" />
            <Barriers value="2" />
            <Barriers value="3" />
            <Barriers value="4" />
        </Barrierrange>
        
        <!-- Topological info (passage cells and intercellular spaces) -->
        <passage_cell_range>
            <passage_cell id="726" /> <!-- ID number of passage cells in the endodermis, ideally in front of early metaxylem vessels --> 
            <passage_cell id="467" /> <!-- ID number of passage cells in the endodermis, ideally in front of early metaxylem vessels -->
            <passage_cell id="1282" /> <!-- ID number of passage cells in the endodermis, ideally in front of early metaxylem vessels -->
        </passage_cell_range>
        <InterC_perim1 value="38" /> <!-- (micrometers) threshold for maximum perimeter of intercellular spaces in first cortical cell layers (next to endodermis) -->
        <InterC_perim2 value="52" /> <!-- (micrometers) threshold for maximum perimeter of intercellular spaces in 2nd cortical cell layers (next to endodermis) -->
        <InterC_perim3 value="60" /> <!-- (micrometers) ... -->
        <InterC_perim4 value="65" /> <!-- (micrometers) ... -->
        <InterC_perim5 value="70" /> <!-- (micrometers) ... -->
        <kInterC value="0.0" /> <!-- 0 for air-filled intercellular spaces / inf for water-filled intercellular spaces -->
        
        <!-- Geometrical properties -->
        <height value="200.0" /> <!-- Cells height (microns) -->
        <thickness value="1.5" /> <!-- Double cell wall thickness (microns) -->
</param>


